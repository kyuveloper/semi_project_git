    <select id="checkEmail" parameterType="com.semiproject.pettales.user.model.dto.LoginUserDTO">
        SELECT
        COUNT(*)
        FROM USER_TABLE
        WHERE USER_EMAIL = #{userEmail}
    </select>
</mapper>